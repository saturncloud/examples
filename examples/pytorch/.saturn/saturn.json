{
  "name": "pytorch",
  "image": "saturncloud/saturn-pytorch:2021.09.20",
  "description": "Use PyTorch with a single GPU or across multiple GPUs with Dask",
  "environment_variables": {
    "DASK_DISTRIBUTED__WORKER__DAEMON": "False",
    "SATURN__JUPYTER_SETUP_DASK_WORKSPACE": "true"
  },
  "working_dir": "/home/jovyan/git-repos/examples/examples/pytorch",
  "start_script": "pip install torch dask-pytorch-ddp seaborn",
  "git_repos": [
    {
      "remote_url": "https://github.com/saturncloud/examples",
      "ref": "release-2021.09.20",
      "location": "examples"
    }
  ],
  "jupyter_server": {
    "start_ssh": false,
    "disk_space": "10Gi",
    "instance_type": "g4dnxlarge",
    "auto_shutoff": "1 hour"
  },
  "dask_cluster": {
    "n_workers": 3,
    "worker": {
      "instance_type": "g4dnxlarge",
      "nprocs": 1,
      "nthreads": 1,
      "is_spot": false
    },
    "scheduler": {
      "instance_type": "large"
    }
  }
}
