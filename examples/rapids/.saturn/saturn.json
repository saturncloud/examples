{
  "name": "rapids",
  "image_uri": "saturncloud/saturn-rapids:2021.09.20",
  "description": "Perform data science work on GPUs using RAPIDS",
  "environment_variables": {
    "SATURN__JUPYTER_SETUP_DASK_WORKSPACE": "true"
  },
  "working_directory": "/home/jovyan/git-repos/examples/examples/rapids",
  "start_script": "bash .saturn/start",
  "git_repositories": [
    {
      "url": "https://github.com/saturncloud/examples",
      "reference": "main",
      "location": "examples"
    }
  ],
  "jupyter_server": {
    "start_ssh": false,
    "disk_space": "10Gi",
    "instance_type": "g4dnxlarge",
    "auto_shutoff": "1 hour"
  },
  "dask_cluster": {
    "num_workers": 3,
    "worker": {
      "instance_type": "g4dnxlarge",
      "num_processes": 1,
      "num_threads": 1,
      "use_spot_instances": false
    },
    "scheduler": {
      "instance_type": "large"
    }
  }
}
